[colors]
background = #222222
background-alt = #f72f343f
foreground = #f59bb0
foreground-alt = #f3f4f5
foreground-dim = #676e7d
primary = #ffb52a
secondary = #e60053
alert = #ff6600

high = #268bd2
high-alt = #0c2b41

[global/wm]
margin-top = 5
margin-bottom = 5

[bar/main]
;monitor = ${env:MONITOR:HDMI-1}
bottom = true
width = 100%
height = 40
offset-x = 0
offset-y = 0

;background = ${xrdb:color9}
background = ${colors.background}
foreground = ${colors.foreground}

overline-size = 2
overline-color = #f00
underline-size = 2
underline-color = ${colors.high}

spacing = 1
padding-left = 0
padding-right = 2
module-margin-left = 0
module-margin-right = 1

font-0 = monofur for Powerline for Powerline:pixelsize=16;0
font-1 = FontAwesome:pixelsize=16;-2

modules-left = bspwm i3 xwindow
modules-center =
modules-right = s sakiir s mpd myVolume s wlan eth s memory cpu myLoad temperature s battery s date 

tray-position = right
tray-padding = 2
tray-background = ${colors.background}


[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%
label-background = ${colors.background-alt}
label-padding = 2
format-underline = ${colors.high}

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

